{
    "apps": [
        {
            "name": "room-manager-backend",
            "script": "dist/main.js",
            "instances": 2,
            "exec_mode": "cluster",
            "env": {
                "NODE_ENV": "production"
            },
            "error_file": "logs/pm2-error.log",
            "out_file": "logs/pm2-out.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "merge_logs": true
        }
    ]
}